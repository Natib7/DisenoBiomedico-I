#include <Wire.h>
#include "Adafruit_MPU6050.h"
#include "Adafruit_Sensor.h"

Adafruit_MPU6050 mpu;

void setup() {
  Serial.begin(115200);
  Wire.begin(21, 22); // Pines SDA y SCL del ESP32

  Serial.println("ğŸ” Escaneando dispositivos I2C...");
  byte count = 0;
  for (byte i = 1; i < 127; i++) {
    Wire.beginTransmission(i);
    if (Wire.endTransmission() == 0) {
      Serial.print("âœ… Dispositivo encontrado en direcciÃ³n 0x");
      Serial.println(i, HEX);
      count++;
    }
  }

  if (count == 0) {
    Serial.println("âŒ No se detectÃ³ ningÃºn dispositivo I2C");
  }

  Serial.println("Intentando inicializar MPU6050...");

  if (!mpu.begin(0x68)) {
    Serial.println("âŒ No se detecta el sensor MPU6050 (verifica SDA/SCL o 3.3V)");
    while (1);
  }

  Serial.println("âœ… Sensor MPU6050 detectado correctamente ğŸ‰");
}

void loop() {
  sensors_event_t a, g, temp;
  mpu.getEvent(&a, &g, &temp);

  Serial.print("AceleraciÃ³n X: "); Serial.print(a.acceleration.x);
  Serial.print(" | Y: "); Serial.print(a.acceleration.y);
  Serial.print(" | Z: "); Serial.println(a.acceleration.z);

  delay(1000);
}
