#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BMP280.h>

Adafruit_BMP280 bmp; // I2C

void setup() {
  Serial.begin(115200);
  if (!bmp.begin(0x76)) {  // Algunos BMP280 usan la dirección 0x77
    Serial.println("❌ No se detecta el sensor BMP280. Verifica las conexiones o la dirección I2C.");
    while (1);
  }
  Serial.println("✅ BMP280 detectado correctamente");
}

void loop() {
  Serial.print("Temperatura: ");
  Serial.print(bmp.readTemperature());
  Serial.println(" °C");

  Serial.print("Presión: ");
  Serial.print(bmp.readPressure() / 100.0);
  Serial.println(" hPa");

  Serial.print("Altitud estimada: ");
  Serial.print(bmp.readAltitude(1013.25)); // presión nivel del mar
  Serial.println(" m");

  Serial.println("----------------------------");
  delay(2000);
}
